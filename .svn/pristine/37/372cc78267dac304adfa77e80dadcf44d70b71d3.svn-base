<%@ page language="java" import="java.util.*" pageEncoding="utf-8"%>
<%@ include file="/WEB-INF/jsp/taglibs.jsp" %>

<!DOCTYPE HTML>
<html lang="zh-CN">
  <head>
    <title>系统错误</title>
  </head>
  
  <body class="no-skin">
  		<div class="container-fluid">
  			<div class="row text-center" style="margin-top: 50px;">
  				<img alt="Brand" style="max-width: 100px;" src="${ctx }/static/images/logo.png">
  			</div>
  			<div class="row text-center"><h3 class="text-danger">出错啦！！<small>请稍候再试</small></h3></div>
  			<p>${exception }</p>
  			<p>${message }</p>
  			<div class="row text-center" style="margin-top: 30px;">
  				 <button onclick="window.history.back();" class="btn btn-warning col-xs-12">返回</button>
  			</div>
  		</div>
  </body>
</html>
